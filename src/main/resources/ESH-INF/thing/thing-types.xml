	</channel-type>
	<channel-type id="heatmap-img">
		<item-type>String</item-type>
		<label>Heatmap Image</label>
		<description>Image of heatmap</description>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="heatmap">
		<item-type>Switch</item-type>
